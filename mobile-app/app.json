{
  "expo": {
    "name": "Smart Home Repair",
    "slug": "smart-home-repair",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smarthomerepair",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smarthomerepair.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Smart Home Repair needs camera access to capture photos and videos of faulty appliances for AI-powered fault detection.",
        "NSPhotoLibraryUsageDescription": "Smart Home Repair needs photo library access to select images of faulty appliances for analysis."
      }
    },
    "android": {
      "package": "com.smarthomerepair.app",
      "adaptiveIcon": {
        "backgroundColor": "#2563EB",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563EB",
          "dark": {
            "backgroundColor": "#111827"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Smart Home Repair to access your camera for fault detection."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Smart Home Repair to access your photos for fault analysis."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
